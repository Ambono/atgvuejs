<!-- User Message -->
<div class="user-message" data-session-expired>
    <!-- Content -->
    <div class="user-message__content">
        <!-- Icon -->
        <div class="user-message__icon">
            <svg xmlns="http://www.w3.org/2000/svg" class="user-message__icon-icon">
                <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/assets/images/sprites/sprites.svg#warning"></use>
            </svg>   
        </div>
        <!-- / Icon -->
        <!-- Information -->
        <div class="user-message__info">
            <h3 class="user-message__info-title"user-message__info-title>Your session expired</h3>
            <p class="user-message__info-text" id="session-expired-desc" session-expired-desc>Sorry, your booking has expired.</p>
            <!-- Buttons -->
            <div class="user-message__btn-container">
                <button class="btn btn--keyline" data-action="accept" aria-describedby="session-expired-desc" btn-btn--keyline>Start again</button>
            </div>
            <!-- / Buttons -->
        </div>
        <!-- / Information -->
    </div>
    <!-- / Content -->
</div>
<!-- / User Message -->