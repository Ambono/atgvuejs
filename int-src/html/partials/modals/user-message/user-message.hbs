<!-- User Message -->
<div class="user-message">
    <!-- Content -->
    <div class="user-message__content">
        <!-- Icon -->
        <div class="user-message__icon">
            <svg xmlns="http://www.w3.org/2000/svg" class="user-message__icon-icon">
                <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/assets/images/sprites/sprites.svg#warning"></use>
            </svg>   
        </div>
        <!-- / Icon -->
        <!-- Information -->
        <div class="user-message__info">
            <h3 class="user-message__info-title">Please Note</h3>
            <p class="user-message__info-text" id="user-leaving">Making changes to the date &amp; time or seat amounts  will mean you need to select your seats again.</p>
            <!-- Buttons -->
            <div class="user-message__btn-container">
                <button class="btn btn--keyline" data-action="deny" aria-describedby="user-leaving">Keep my seats</button>
                <button class="btn" data-action="continue" aria-describedby="user-leaving">Make changes</button>
            </div>
            <!-- / Buttons -->
        </div>
        <!-- / Information -->
    </div>
    <!-- / Content -->
</div>
<!-- / User Message -->